{
  "name": "passport-pythia",
  "version": "1.0.0",
  "description": "Passport strategy for authenticating with Virgil Pythia",
  "main": "./dist/passport-pythia.cjs.js",
  "module": "./dist/passport-pythia.es.js",
  "typings": "./dist/types/index.d.ts",
  "repository": "https://VirgilSecurity/passport-pythia.git",
  "author": "Virgil Security Inc. <support@virgilsecurity.com>",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "jest",
    "clean": "rimraf .rpt2_cache coverage dist",
    "build:cjs": "cross-env FORMAT=cjs rollup -c",
    "build:es": "cross-env FORMAT=es rollup -c",
    "build": "npm run build:cjs && npm run build:es",
    "prepare": "npm run clean && npm run build",
    "lint": "tslint --project tsconfig.json",
    "prettier": "prettier 'src/**/*.ts' --write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "passport-strategy": "^1.0.0"
  },
  "peerDependencies": {
    "virgil-pythia": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.0",
    "@types/passport-strategy": "^0.2.35",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1",
    "virgil-crypto": "^3.0.0",
    "virgil-pythia": "^0.2.2",
    "virgil-sdk": "^5.0.0"
  }
}
